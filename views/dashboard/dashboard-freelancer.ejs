            <% if(error){ %>
                <div class="alert alert-danger alert-dismissible">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    <strong><%=error%></strong> 
                  </div>
            <% }else if(success){%>
                <div class="alert alert-success alert-dismissible">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    <strong><%=success%></strong> 
                  </div>
            <% } %>
            
            <!-- THE JOBS SECTION CARDS GOES HERE -->
            <div class="row mb-5 ">
                <div class="col-md-12 mt-3">
                    <h3 class="welcome mt-5">Welcome <%=user.first_name%></h3>
                </div>
                <div class="col-md-3 clickable" onclick="showApplied();">
                    <div class="card  mt-3 mb-3 border-0 bg-white">
                        <div class="card-body  section-card d-flex dash-card justify-content-around">
                            <div>
                                <i class="fa fa-list job-icons mt-4" style="color: #A41201;"></i>
                            </div>
                            <div class="mt-3 job-types">
                                Jobs Applied
                            </div>
                            <div class="mt-2 numbers-section">
                                <h3 class="mt-2" style="color: #A41201;" id="jobsApplied"><%=jobAppCount%></h3>
                            </div>
                            
                        </div>
                    </div>
                </div>
                
                <div class="col-md-3 clickable" onclick="showAwarded();">
                    <div class="card  mt-3 mb-3 border-0 bg-white">
                        <div class="card-body  section-card d-flex dash-card justify-content-around">
                            <div>
                                <i class="fa fa-list job-icons mt-4" style="color: #FC6D00;" ></i>
                            </div>
                            <div class="mt-3 job-types">
                                Jobs Awarded
                            </div>
                            <div class="mt-2 numbers-section">
                                <h3 class="mt-2" style="color: #FC6D00;" id="jobsAwarded"><%=jobAwarded%></h3>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 clickable" onclick="showProgress();">
                    <div class="card  mt-3 mb-3 border-0 bg-white">
                        <div class="card-body  section-card d-flex dash-card justify-content-around">
                            <div>
                                <i class="fa fa-hourglass-half job-icons mt-4" style="color: #DEC109;"></i>
                            </div>
                            <div class="mt-3 job-types">
                                Jobs In Progress
                            </div>
                            <div class="mt-2 numbers-section">
                                <h3 class="mt-2" style="color: #DEC109;" id="jobsInProgress"><%=jobInproCount%></h3>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 clickable" onclick="showComplete()">
                    <div class="card  mt-3 mb-3 border-0 bg-white">
                        <div class="card-body  section-card d-flex dash-card justify-content-around">
                            <div>
                                <i class="fa fa-check-circle job-icons1 mt-4" style="color: #0DC100; font-size: 25px;"></i>
                            </div>
                            <div class="mt-3 job-types">
                                Jobs Completed
                            </div>
                            <div class="mt-2 numbers-section" >
                                <h3 class="mt-2" style="color: #0DC100;" id="jobsCompleted"><%=jobCompCount%></h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>  

            <% include freelancer-job-table.ejs%>

            <div class="row mb-2">
                <div class="col-md-6">
                    <p class="para-text">Based on your profile and skills, these are some recommended jobs...</p>
