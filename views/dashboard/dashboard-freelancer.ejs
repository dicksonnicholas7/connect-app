                                    <h6 class="client-name"><%=j.first_name%>   <%=j.last_name%></h5>
                                    <h6 class="mt-4 mb-5 price"><%=j.job_price%></h6>
                                    </div>
                                <div>
                                    <a class="form-control rec-buttons" href="/user/jobs">See more</a>
                                </div>
                                    
                                </div>
