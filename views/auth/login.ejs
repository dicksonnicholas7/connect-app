<style>
.custom-control-label {
  padding-left: 10px;
}
.custom-checkbox .custom-control-label::before {
  margin-top: 3px;
}
.field-icon {
  float: right;
  margin-left: -25px;
  padding-right: 5px;
  margin-top: -25px;
  position: relative;
  z-index: 2;
 
}
</style>



<div class="" style="background-image:url('../../vendors/img/log_in.jpg'); padding-bottom: 106px; padding-top: 70px; height: 700px; ">
    <div class="col-md-12">
        <div class="container" id="sign-card">
            <div>

                <h3 class="form-title">Log In to Connect</h3>

            </div>

            <div class="alert alert-danger alert-dismissible mt-4" id="login_error_msg" style="display: none;"></div>

        <form action="#" method="post" class="p-5 bg-white" style="margin: auto;text-align: center;" validate>
          

            <div class="ps-form__content">
         
            <div class="form-group">
                <div class="col-md-12">
                    <input autocomplete="off" type="text" id="email" name="email" class="form-control" placeholder="Email" required/>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    <input autocomplete="off" type="password" id="password" onpaste="return false;" name="password" class="form-control" placeholder="Password" required/>
                    <span toggle="#password" class="fa fa-lg fa-eye field-icon toggle-password"></span>
                </div>
            </div>

            </div>

            <div class="row">

                <div class="custom-control custom-checkbox col-md-6">
                    <span>
                        <input type="checkbox" class="custom-control-input" id="customCheck1">
                        <label class="custom-control-label mb-3" for="customCheck1">Remember me</label>
                    </span>
                    
                  </div>
                <div class="form-group col-md-6">
                    <a href="/forgot-password">Forgot password?</a>
                </div>
            </div>


            <div class="ps-form__footer">
                <div class="col-md-12" >
                  
                        <input type="submit" id="btnlogin" name="btnlogin" value="Log In" class="ps-btn ps-btn--fullwidth ps-btn--gradient mb-3"><hr>
                        <p class="mt-3">Not a member yet?<a href="/signup"> Sign up</a></p>
                </div>
            </div>

        </form>
    </div>
    </div>
</div>
